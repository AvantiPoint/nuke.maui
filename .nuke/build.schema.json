{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "AndroidKeystoreB64": {
          "type": "string",
          "description": "Android KeyStore must be Base64 Encoded",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AndroidKeystoreName": {
          "type": "string",
          "description": "Android KeyStore name must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AndroidKeystorePassword": {
          "type": "string",
          "description": "Android KeyStore must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AppleAuthKeyP8": {
          "type": "string",
          "description": "Apple AuthKey P8 text value",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AppleIssuerId": {
          "type": "string",
          "description": "Apple Issuer Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AppleKeyId": {
          "type": "string",
          "description": "Apple Key Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AppleProfileId": {
          "type": "string",
          "description": "Apple Profile Id is required",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureKeyVault": {
          "type": "string",
          "description": "The Azure KeyVault Uri",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureKeyVaultCertificate": {
          "type": "string",
          "description": "The name of the Code Sign certificate in the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureKeyVaultClientId": {
          "type": "string",
          "description": "The Azure AD Client Id to connect to the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureKeyVaultClientSecret": {
          "type": "string",
          "description": "The Azure AD Client Secret to connect to the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "AzureKeyVaultTenantId": {
          "type": "string",
          "description": "The Azure AD Tenant Id",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "CodeSignCertificate": {
          "type": "string",
          "description": "The name of the Code Sign certificate in the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "CodeSignClientId": {
          "type": "string",
          "description": "The Azure AD Client Id to connect to the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "CodeSignClientSecret": {
          "type": "string",
          "description": "The Azure AD Client Secret to connect to the Azure Key Vault",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "CodeSignKeyVault": {
          "type": "string",
          "description": "The Azure KeyVault Uri",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "CodeSignTenantId": {
          "type": "string",
          "description": "The Azure AD Tenant Id",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Configuration": {
          "type": "string",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DigestAlgorithm": {
          "type": "string",
          "description": "The Signing Algorithm, i.e. sha1, sha256, sha384, sha512. Defaults to sha256",
          "enum": [
            "SHA1",
            "SHA256",
            "SHA384",
            "SHA512"
          ]
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "InHouseApiKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "InHouseNugetFeed": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "InputFilePath": {
          "type": "string"
        },
        "Linker": {
          "type": "string",
          "enum": [
            "Full",
            "None",
            "SdkOnly"
          ]
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "P12B64": {
          "type": "string",
          "description": "P12 Certificate must be Base64 Encoded",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "P12Password": {
          "type": "string",
          "description": "P12 Certificate must be provided",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "PfxB64": {
          "type": "string",
          "description": "Base 64 Encoded PFX for code signing the Windows MSIX",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "PfxPassword": {
          "type": "string",
          "description": "The password for the Windows signing Certificate",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "ProjectName": {
          "type": "string",
          "description": "The name of the MAUI Single Project to build"
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "CleanArtifacts",
              "CodeSign",
              "CodeSignMsix",
              "CompileAndroid",
              "CompileIos",
              "CompileLib",
              "CompileMacCatalyst",
              "CompileWindows",
              "DownloadProvisioningProfile",
              "EncodeFile",
              "GenerateJwt",
              "InstallWorkload",
              "PublishNuGet",
              "Restore",
              "RestoreIOSCertificate",
              "RestoreKeystore"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "CleanArtifacts",
              "CodeSign",
              "CodeSignMsix",
              "CompileAndroid",
              "CompileIos",
              "CompileLib",
              "CompileMacCatalyst",
              "CompileWindows",
              "DownloadProvisioningProfile",
              "EncodeFile",
              "GenerateJwt",
              "InstallWorkload",
              "PublishNuGet",
              "Restore",
              "RestoreIOSCertificate",
              "RestoreKeystore"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}